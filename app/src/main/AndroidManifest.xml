<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.home.tictactoe">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SinglePlayerGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MultiPlayerGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MultiPlayerMediumLevel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MultiPlayerHardLevel"
            android:screenOrientation="portrait" />
        <activity android:name=".SinglePlayerHardLevel"></activity>
    </application>

</manifest>